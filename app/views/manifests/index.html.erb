<div class="container">
  <% if notice.present? %>
    <div class="alert alert-info" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  
  <div class="panel panel-primary">
    <div class="panel-heading">Listing Manifests</div>
    <div class="panel-body">
      <form action="/manifests" method = "get">
        <div class="col-md-4">
          <input type="text" name="search" class="form-control" />
        </div>
        <input type="submit" value="Submit" class="btn btn-success" />
      </form>
    </div>
    
      <table class="table"> 
        <thead>
          <tr>
            <th>MAWB</th>
            <th>Download link</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @manifests.each do |manifest| %>
            <tr>
              <td><%= manifest.mawb %></td>
              <td><h5><a href="/manifests/view_manifest.pdf?manifest[mawb]=<%= manifest.mawb %>">PDF</a> | <a href="/manifests/download.xlsx?manifest[mawb]=<%= manifest.mawb %>"> EXCEL</a></h5></td>
              <td><%= link_to 'Show', manifest, class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_manifest_path(manifest), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', manifest, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  <div class="digg_pagination">
    <center>   <%= will_paginate @manifests, renderer: BootstrapPagination::Rails %> </center>
  </div>
  <br>
<br>

<%= link_to 'New Manifest', new_manifest_path, class: "btn btn-info" %>
</div>