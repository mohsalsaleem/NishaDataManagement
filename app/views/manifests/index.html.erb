<div class="container">
  <% if notice.present? %>
    <div class="alert alert-info" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  <div class="panel panel-primary">
    <div class="panel-heading">Listing Manifests</div>

      <table class="table"> 
        <thead>
          <tr>
            <th>MAWB</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @manifests.each do |manifest| %>
            <tr>
              <td><%= manifest.mawb %></td>
              <td><%= link_to 'Show', manifest, class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_manifest_path(manifest), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', manifest, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
<br>

<%= link_to 'New Manifest', new_manifest_path, class: "btn btn-info" %>
</div>